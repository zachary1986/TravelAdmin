@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}
<body>
    <div class="content">
        <h3 class="form-title">Travel Admin Login</h3>
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span>
                Enter any username and password.
            </span>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" id="txtUname" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" id="txtPwd" />
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn blue pull-right" onclick="Login()" id="btnLogin">
                Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
            <label id="lblMsg" style="color:red;"></label>
        </div>
    </div>

    <script>
        //点击Enter键相当于Button确事件
        $(document).keydown(function (e) {
            if (e.keyCode == 13) {
                e.preventDefault();
                $('#btnLogin').click();
            }
        });

        function Login() {
            var txtuname = $("#txtUname").val();
            var txtpwd = $("#txtPwd").val();
            $.post('LoginCheck', { uname: txtuname, pwd: txtpwd }, function (data, status) {
                if (status == 'success') {
                    alert(data);
                }
            });




        }

    </script>
